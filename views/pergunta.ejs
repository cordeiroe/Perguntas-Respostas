<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>
<body>
    
    <div class = "container">
        <hr>
        <blockquote class="blockquote text-center">
            <h2><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <p class="timestamp"><%= pergunta.createdAt %></p>
        </blockquote>
        

        <hr>

        <form method="POST" action="/responder">

            <label>Sua resposta:</label>
            <textarea placeholder="Digite a resposta" class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark btn-sm">Responder</button> 
        </form>

        <hr>
        <h3>Respostas: </h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                    <p class="timestamp"><%= resposta.createdAt %></p>
                </div>

            </div>
            


        <% }) %>
    </div>

</body>
<%- include ('partials/footer.ejs')%>