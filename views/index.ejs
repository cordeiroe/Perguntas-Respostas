<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>
<body>
    
    <div class = "container">

        <hr>
        <h1>Perguntas</h1>
        <a href="/perguntar" class="btn btn-dark btn-sm">Perguntar!</a>
        <hr>        
        <br>
        <% perguntas.forEach(pergunta=> { %>

            <br>
            <div class="card">
                <div class="card-body">

                    <h4><%= pergunta.titulo %></h3>

                </div>

                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-dark btn-sm">Responder</button></a>
                </div>

            </div>


        <% }) %>

        <br>
    </div>
    

</body>
